@model IEnumerable<MvcProje.Models.tbl_project>
@{
    ViewBag.Title = "Yazılım Projeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: url(/Content/Site/images/background/1.jpg);">
    <div class="container">
        <div class="box">
            <h3>Projeler</h3>
        </div><!-- /.box -->
    </div><!-- /.container -->
</div>

<div class="breadcumb-wrapper">
    <div class="container">
        <div class="pull-left">
            <ul class="list-inline link-list">
                <li>
                    <a href="@Url.Action("","")">Anasayfa</a>
                </li>
                <li>
                    Projeler
                </li>
            </ul><!-- /.list-line -->
        </div>
    </div><!-- /.container -->
</div>


<div class="sidebar-page-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="news-section padd-2">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="news-style-one">
                                    <div class="inner-box">
                                        <div class="image">
                                            <img src="@item.ProjectImg" alt="" />
                                            <div class="post-time">@item.ProjectAddedDatetime.Value.ToString("dd-MM-yyyy")</div>
                                        </div>
                                        <div class="lower-content">
                                            <h3><a href="blog-details.html">@item.ProjectName</a></h3>
                                            <div class="text">
                                                @Html.Raw(item.ProjectContent)
                                            </div>
                                            <div class="link-btn2 center">
                                                <a href="@Url.Action("Detail", "Project", new {id = item.Id })" class="btn-style-two">Daha Fazla</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <br>
                    <ul class="page_pagination style-2 center">
                        <li><a href="#" class="tran3s"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li>
                        <li><a href="#" class="active tran3s">1</a></li>
                        <li><a href="#" class="tran3s">2</a></li>
                        <li><a href="#" class="tran3s">3</a></li>
                        <li><a href="#" class="tran3s"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                    </ul>
                </section>
            </div>
        </div>
    </div>
</div>


