
@model MvcProje.Models.tbl_user
<div class="modal-header" style="background-color: #607D8B; color: white">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2 class="modal-title" style="text-align: center"> @Model.NameSurname</h2>
</div>
<div class="modal-body">
    <table class="table table-bordered">
        <tr>
            <td>Kullanıcı Resmi</td>
            <td>
                <img src="@Model.Image" />
            </td>
        </tr>
        <tr>
            <td>Kullanıcı Email</td>
            <td>
                @Model.Email
            </td>
        </tr>
        <tr>
            <td>Kullanıcı Hakkında</td>
            <td>
                @Model.About
            </td>
        </tr>
        <tr>
            <td>Kullanıcı Rol</td>
            <td>
                @Model.Role
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="material-icons">power_settings_new</i> Kapat</button>
</div>