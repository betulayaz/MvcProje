@model MvcProje.Models.tbl_user
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Vertical Layout -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                   Kullanıcı Ekleme Sayfası
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Create", "UserAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <label for="image">Kullanıcı Resmi</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="file" id="File" name="File" accept=".jpg,.JPG,.png,.PNG,.JPEG" class="form-control">
                        </div>
                    </div>
                    <label for="namesurname">Ad Soyad</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                        </div>
                    </div>
                    <label for="email">Email</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                        </div>
                    </div>
                    <label for="about">Hakkında</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                        </div>
                    </div>
                    <label for="password">Şifre</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required",@type="password" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.RadioButton("Role", "Admin", new { @id = "admin" })
                        @*<input type="radio" name="gender" id="male" class="with-gap">*@
                        <label for="admin">Admin</label>

                        @Html.RadioButton("Role", "User", new { @id = "user" })
                        @*<input type="radio" name="gender" id="female" class="with-gap">*@
                        <label for="user" class="m-l-20">User</label>
                    </div>
                    <br>
                    <input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Kullanıcı Kaydet">

                }

            </div>
        </div>
    </div>
</div>
<!-- #END# Vertical Layout -->