
@model MvcProje.Models.tbl_project
<div class="modal-header" style="background-color: #607D8B; color: white">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2 class="modal-title" style="text-align: center"> @Model.ProjectName</h2>
</div>
<div class="modal-body">
    <table class="table table-bordered">
        <tr>
            <td>Proje Kategorisi</td>
            <td>
                @Model.ProjectCategory
            </td>
        </tr>
        <tr>
            <td>Proje Resmi</td>
            <td>
                <img src="@Model.ProjectImg" />
            </td>
        </tr>
        <tr>
            <td>Proje Hakkında</td>
            <td>
                @Html.Raw(Model.ProjectContent)
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="material-icons">power_settings_new</i> Kapat</button>
</div>
