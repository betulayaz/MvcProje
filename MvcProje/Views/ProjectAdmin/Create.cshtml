@model MvcProje.Models.tbl_project
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <style>
        .btn.dropdown-toggle.btn-default {
            display: none;
        }
    </style>
}
<script src="~/Content/Admin/ckeditor/ckeditor.js"></script>
<!-- Vertical Layout -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Proje Ekleme Sayfası
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Create", "ProjectAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <label for="image">Proje Resmi</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="file" id="File" name="File" accept=".jpg,.JPG,.png,.PNG,.JPEG" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(model => model.ProjectCategory, new List<SelectListItem>()
 {
   new SelectListItem() { Text= "Yazılım", Value = "yazilim-projeleri" },
   new SelectListItem() { Text= "İnsan Kaynakları Projeleri", Value = "ik-projeleri" },
   new SelectListItem() { Text= "Finans Projeleri", Value = "finans-projeleri" }
 }, "Kategori Seçiniz ...", new { @class = "form-control" })

                        </div>
                    </div>
                    <label for="name">Proje Adı</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                        </div>
                    </div>
                    <label for="name">Proje İçeriği</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextAreaFor(model => model.ProjectContent, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                            <script>
                                CKEDITOR.replace("FullDescription");
                            </script>
                        </div>
                    </div>
                    <br>
                    <input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Proje Kaydet">

                }

            </div>
        </div>
    </div>
</div>
<!-- #END# Vertical Layout -->
